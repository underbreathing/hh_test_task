<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragmentSign"
    android:id="@+id/main_navigation_graph">

    <fragment
        android:id="@+id/fragmentSign"
        android:name="com.sheverdyaevartem.hh.sign_in.ui.log_in.FragmentLogin"
        android:label="fragment_sign"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_fragmentSign_to_fragmentCodeEntry"
            app:destination="@id/fragmentCodeEntry" />
    </fragment>
    <fragment
        android:id="@+id/fragmentCodeEntry"
        android:name="com.sheverdyaevartem.hh.sign_in.ui.code_entry.FragmentCodeEntry"
        android:label="fragment_code_entry"
        tools:layout="@layout/fragment_code_entry">
        <action
            android:id="@+id/action_fragmentCodeEntry_to_fragmentSearch"
            app:destination="@id/fragmentSearch"
            app:popUpTo="@id/fragmentSign"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSearch"
        android:name="com.sheverdyaevartem.hh.feature_search.api.ui.fragment.FragmentSearch"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/fragmentFavourites"
        android:name="com.sheverdyaevartem.hh.favourites.ui.FragmentFavourites"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/fragmentResponses"
        android:name="com.sheverdyaevartem.hh.responses.ui.FragmentResponses"
        android:label="fragment_responses"
        tools:layout="@layout/fragment_responses" />
    <fragment
        android:id="@+id/fragmentMessages"
        android:name="com.sheverdyaevartem.hh.messages.ui.FragmentMessages"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="com.sheverdyaevartem.hh.profile.ui.FragmentProfile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>