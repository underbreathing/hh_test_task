<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_1_green" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/text_1</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="offer_title_style" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Title4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottom_navigation_panel" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/switch_navigation_item_color</item>
        <item name="itemTextColor">@color/switch_navigation_item_color</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="main_et_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_corners_gray2</item>
        <item name="android:textColorHint">@color/gray3</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/text_1</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="et_code" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_corners_gray2</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAppearance">@style/log_in_code</item>

    </style>

    <style name="buttom_green" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/button_text_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corners_green</item>
    </style>

    <style name="buttom_blue_short" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/button_text_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_toggle</item>
    </style>

    <style name="text_title_2">
        <item name="android:textAppearance">@style/Title2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_title_3">
        <item name="android:textAppearance">@style/Title3</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>