<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sheverdyaevartem.hh.sign_in.ui.code_entry.FragmentCodeEntry">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_primary" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_primary" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/text_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_primary"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintEnd_toStartOf="@id/guide_right"
        app:layout_constraintStart_toEndOf="@id/guide_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Отправили код на Longlonglonglongemail.com" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/text_title_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_primary"
        android:tag="desc"
        android:text="Напишите его, чтобы подтвердить, что это вы, а не кто-то другой входит в личный кабинет"
        app:layout_constraintBottom_toTopOf="@id/code_1"
        app:layout_constraintEnd_toStartOf="@id/guide_right"
        app:layout_constraintStart_toEndOf="@id/guide_left"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <EditText
        android:id="@+id/code_1"
        style="@style/et_code"
        android:layout_marginBottom="@dimen/margin_primary"
        app:layout_constraintBottom_toTopOf="@id/b_confirm"
        app:layout_constraintEnd_toStartOf="@id/code_2"
        app:layout_constraintStart_toEndOf="@id/guide_left"
        app:layout_constraintTop_toBottomOf="@id/tv_desc" />

    <EditText
        android:id="@+id/code_2"
        style="@style/et_code"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="@id/code_1"
        app:layout_constraintStart_toEndOf="@id/code_1"
        app:layout_constraintTop_toTopOf="@id/code_1" />

    <EditText
        android:id="@+id/code_3"
        style="@style/et_code"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="@id/code_1"
        app:layout_constraintStart_toEndOf="@id/code_2"
        app:layout_constraintTop_toTopOf="@id/code_1" />

    <EditText
        android:id="@+id/code_4"
        style="@style/et_code"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="@id/code_1"
        app:layout_constraintStart_toEndOf="@id/code_3"
        app:layout_constraintTop_toTopOf="@id/code_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_confirm"
        style="@style/buttom_blue_short"
        android:layout_width="0dp"
        android:layout_height="@dimen/big_button_height"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_toggle"
        android:enabled="false"
        android:paddingHorizontal="44dp"
        android:text="Подтвердить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_right"
        app:layout_constraintStart_toEndOf="@id/guide_left"
        app:layout_constraintTop_toBottomOf="@id/code_1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>